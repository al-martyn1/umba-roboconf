(// Заменяем круглые скобки на подчеркивания, потому что не удобно с ними)
(modify "mcuNet" replaceSingle "\(" "$({P})_$({S})")
(modify "mcuNet" replaceSingle "\)" "$({P})_$({S})")

(// После замены скобок удаляем ведущие и конечные подчёркивания, а также дублированные подчёркивания)
(modify "mcuNet" replaceSingle "^(.*)_$"      "$({P})$({1})$({S})")
(modify "mcuNet" replaceSingle "^_(.*)$"      "$({P})$({1})$({S})")
(modify "mcuNet" replaceSingle "^(.*)__(.*)$" "$({P})$({1})_$({2})$({S})")


(modify "mcuNet" replaceSingle "BMSEL(\d+)(.*)"  "$({P})BMSEL_$({1})$({2})$({S})")
(modify "mcuNet" replaceSingle "BAT_MES(\d+)"    "$({P})BAT_MES_$({1})$({S})")
(modify "mcuNet" replaceSingle "BAT_BAL(\d+)"    "$({P})BAT_BAL_$({1})$({S})")
(-- modify "mcuNet" replace "(.+)_(\d+)(.*)" "$({1})$({2})$({3})")

(modify "mcuNet" replaceSingle "PF0_UART8_nRxEN_"  "$({P})MASTER_LINK_485_~RX_EN$({S})")
(modify "mcuNet" replaceSingle "PF1_UART8_TxEN_"   "$({P})MASTER_LINK_485_TX_EN$({S})") 
(modify "mcuNet" replaceSingle "PE1_UART8_Tx_"     "$({P})MASTER_LINK_485_RX$({S})")
(modify "mcuNet" replaceSingle "PE0_UART8_Rx_"     "$({P})MASTER_LINK_485_TX$({S})") 

